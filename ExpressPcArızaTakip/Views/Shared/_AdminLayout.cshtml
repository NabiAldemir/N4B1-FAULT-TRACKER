<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                
                <span class="brand-text">N4B1 YAZILIM</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <!-- User Info Section -->
                    <div class="info">
                        <!-- Display Username from Session -->
                        <a href="#" class="d-block">
                           Hoşgeldiniz @Session["Users"]
                        </a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Admin/Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="nav-text">Arıza Takip Sistemi</p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Admin/ArizaTalepleri" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p class="nav-text">Arıza Taleplerim</p>
                            </a>
                        </li>
                       
                       
                        @if (Session["Roles"] != null && Session["Roles"].ToString().Contains("Admin"))
                        {
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-chart-pie"></i>
                                    <p class="nav-text">Admin Panel<i class="right fas fa-angle-left"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="~/Admin/TabloyuGuncelle" class="nav-link">
                                            <i class="far fa-edit nav-icon"></i>
                                            <p class="nav-text">Tabloyu Güncelle</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="~/Admin/KullaniciEkle" class="nav-link">
                                            <i class="fas fa-user-plus nav-icon"></i>
                                            <p class="nav-text">Kullanıcı Ekle</p>
                                        </a>
                                    
</li>
                                    <li class="nav-item has-treeview">
                                        <a href="/Admin/ArizaNedenleri" class="nav-link">
                                            <i class="nav-icon fas fa-exclamation-circle"></i>
                                            <p class="nav-text">Arıza Nedeni Ekle</p>
                                        </a>
                                    </li>
                                    <li class="nav-item has-treeview">
                                        <a href="/Admin/ArizaDurumlari" class="nav-link">
                                            <i class="nav-icon fas fa-info-circle"></i>
                                            <p class="nav-text">Arıza Durumu Ekle</p>
                                        </a>
                                    </li>
                                    <li class="nav-item has-treeview">
                                        <a href="/Admin/Sirketler" class="nav-link">
                                            <i class="nav-icon fas fa-map-marker-alt"></i>
                                            <p class="nav-text">Şirket Ekle</p>
                                        </a>
                                    </li>
                                    
                                </ul>
                            </li>
                        }
                        <li class="nav-item has-treeview">
                            <a id="logoutBtn" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p class="nav-text">Çıkış yap</p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
    <script src="https://cdn.datatables.net/2.1.2/js/dataTables.js"></script>



</body>
</html>
<script type="text/javascript">
$('#logoutBtn').on('click', function () {
    Swal.fire({
        title: 'Çıkış yapmak istediğinize emin misiniz?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Evet, çıkış yap',
        cancelButtonText: 'Hayır, kal'
    }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Logout", "Account")',
                success: function () {
                Swal.fire({
                icon: 'success',
                title: 'Başarıyla çıkış yapıldı',
                showConfirmButton: false,
                timer: 1500
                }).then(() => {
                window.location.href = '@Url.Action("Login", "Account")';
                });
                },
                error: function () {
                Swal.fire({
                icon: 'error',
                title: 'Çıkış başarısız',
                text: 'Çıkış yaparken bir hata oluştu. Lütfen tekrar deneyin.',
                });
                }
                });
                }
                });
});
                </script>