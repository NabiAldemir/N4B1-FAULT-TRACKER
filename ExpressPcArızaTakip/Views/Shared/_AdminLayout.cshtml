
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>AdminLTE 3 | Dashboard 3</title>
    <script src="~/JS Dosyaları/jquerys.min.js"></script>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="~/JS Dosyaları/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="~/JS Dosyaları/css.css" rel="stylesheet">

    <link rel="stylesheet" href="~/JS Dosyaları/dataTables.dataTables.css" />
    <script src="~/JS Dosyaları/dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/JS Dosyaları/jquery.dataTables.js"></script>
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <script src="~/JS Dosyaları/sweetalert2@11.js"></script>
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    

    <style>
        .nav-link {
            display: flex;
            align-items: center;
        }

        .nav-icon {
            width: 30px; /* Tüm ikonlar için sabit genişlik */
            text-align: center;
            margin-right: 10px; /* İkon ile metin arasındaki boşluk */
        }

        .nav-text {
            flex: 1; /* Metni ikonun yanına hizalar ve kalan alanı kaplar */
        }
        .brand-link {
            display: flex;
            align-items: center;
            justify-content: center; /* Center horizontally */
            padding: 10px;
            text-decoration: none;
            color: #fff;
            font-size: 20px;
           
        }
        .info a {
            text-decoration: none;
            color: #fff;
            font-size: 16px;
            text-align: center; /* Center text */
        }
        .user-panel {
            display: flex;
            align-items: center;
            justify-content: center; /* Center horizontally */
            padding: 10px;
            border-bottom: 1px solid #4b4f58;
            
        }
    </style>

</head>
