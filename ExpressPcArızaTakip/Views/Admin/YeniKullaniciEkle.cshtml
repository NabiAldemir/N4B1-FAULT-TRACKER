@model ExpressPcArızaTakip.Models.Entity.Role
@{
    ViewBag.Title = "YeniKullaniciEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Kullanıcı</label>
        <input type="text" class="form-control" name="Users" />

    </div>
    <div>
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" name="UserName" />

    </div>
    <div>
        <label>Kullanıcı Şifresi</label>
        <input type="text" class="form-control" name="Password" />

    </div>
    <label>Kullanıcı Yetkisini Seç</label>
    <select name="ProblemReasonId" class="form-control" id="ProblemReasonId">
        <option value="0" hidden>Arıza Sebebini Seç</option>
        @foreach (var item in (List<SelectListItem>)ViewBag.dgr)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <div style="margin-top:15px;">
        <button class="btn btn-info">Yeni Kullanıcı Ekle</button>

    </div>
</form>

